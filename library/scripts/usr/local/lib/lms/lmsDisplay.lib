declare    lmscli_optQuiet=0
declare    lmscli_optDebug=1

# =========================================================================
#
#   lmsDisplay
#		display message on the console
#
#	parameters:
#		message = message to display
#       override = 1 to override lmsopt
#	returns:
#		0 = no errors
#		non-zero = error code
#
# =========================================================================
function lmsDisplay()
{
    local lmscon_buffer="${1}"
    local override=${2:-0}
    local noret=${3:-""}

    [[ ${lmscli_optQuiet} -ne 0  &&  ${override} -eq 0 ]] && return 0
    [[ -z "${noret}" ]] && echo "${lmscon_buffer}" || echo -n "${lmscon_buffer}"

    return 0
}

# =========================================================================
#
#   lmsDisplayTs
#		display message with timestamp on the console
#
#	parameters:
#		message = message to display
#       override = 1 to override lmsopt
#       
#	returns:
#		0 = no errors
#		non-zero = error code
#
# =========================================================================
function lmsDisplayTs()
{
	local buffer=${1:-""}
    local oride=${2:-0}
    local no=${3:-""}

 	lmsTimestamp 0

	local tS
	printf -v tS "%s %s" "${utilTs}" "${buffer}"

	lmsDisplay "${tS}" "${oride}" "${no}"	
}

