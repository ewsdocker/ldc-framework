#
#	Location and structure of the ckaptain library
#
#    /opt
#     |-- ckaptain-lib                 $ckl
#         |-- bin                      $cklbin
#         |-- lib                      $ckllib
#         |-- share                    $cklshare
#             |-- icons                $cklicons
#             |-- ck                   $ck
#             |-- ck-common            $ckc
#             |-- ckw                  $ckw
#                 |-- widgets          $ckw_widgets
#                 |-- dialogs          $ckw_dialogs
#

declare    ckl="/opt/ckaptain-lib"

declare    cklbin="$ckl/bin"
declare    ckllib="$ckl/lib"
declare    cklshare="$ckl/share"

declare    cklicons="$cklshare/icons"

declare    ck="$cklshare/ck"
declare    ckc="$cklshare/ck-common"
declare    ckw="$cklshare/ckw"

declare    ckw_widgets="$ckw/widgets"
declare    ckw_dialogs="$ckw/dialogs"

# =========================================================================================

declare    template=""
declare    templatePath=""
declare    templateName=""

declare -i newTemplate=0
declare -a nv

