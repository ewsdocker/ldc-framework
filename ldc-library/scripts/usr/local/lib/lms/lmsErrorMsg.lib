declare ecNames=("unknown"
# =========================================================================================
#
#    lmsErrorMsg - Output error message and EXIT with error code
#
#    Parameters:
#		errorMsg = name of the error message to output
#       exitCode = error code to exit on
#
#    Results:
#       script is exited.
#
# =========================================================================================
function lmsErrorMsg()
{
	local errorMsg=${1:-"unknown"}
    local exitCode=${2:-127}

    [[ -z ${EC_MSG[$exitCode]} ]] && exitCode=${EC_UNKNOWN}

    [[ "${exitCode}" -ne "${EC_NONE}" ]] && lmsDisplay "${EC_MSG[$exitCode]}"
    exit ${exitCode}
}
